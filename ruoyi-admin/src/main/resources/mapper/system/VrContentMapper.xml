<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.VrContentMapper">
    
    <resultMap type="VrContent" id="VrContentResult">
        <result property="contentId"    column="content_id"    />
        <result property="contentName"    column="content_name"    />
        <result property="category"    column="category"    />
        <result property="fileUrl"    column="file_url"    />
        <result property="description"    column="description"    />
        <result property="carrierId"    column="carrier_id"    />
        <result property="workId"    column="work_id"    />
    </resultMap>

    <sql id="selectVrContentVo">
        select content_id, content_name, category, file_url, description, carrier_id, work_id from vr_content
    </sql>

    <select id="selectVrContentList" parameterType="VrContent" resultMap="VrContentResult">
        <include refid="selectVrContentVo"/>
        <where>  
            <if test="contentName != null  and contentName != ''"> and content_name like concat('%', #{contentName}, '%')</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
            <if test="fileUrl != null  and fileUrl != ''"> and file_url = #{fileUrl}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
        </where>
    </select>
    
    <select id="selectVrContentByContentId" parameterType="Long" resultMap="VrContentResult">
        <include refid="selectVrContentVo"/>
        where content_id = #{contentId}
    </select>

    <insert id="insertVrContent" parameterType="VrContent">
        insert into vr_content
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="contentId != null">content_id,</if>
            <if test="contentName != null and contentName != ''">content_name,</if>
            <if test="category != null">category,</if>
            <if test="fileUrl != null and fileUrl != ''">file_url,</if>
            <if test="description != null">description,</if>
            <if test="carrierId != null">carrier_id,</if>
            <if test="workId != null">work_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="contentId != null">#{contentId},</if>
            <if test="contentName != null and contentName != ''">#{contentName},</if>
            <if test="category != null">#{category},</if>
            <if test="fileUrl != null and fileUrl != ''">#{fileUrl},</if>
            <if test="description != null">#{description},</if>
            <if test="carrierId != null">#{carrierId},</if>
            <if test="workId != null">#{workId},</if>
         </trim>
    </insert>

    <update id="updateVrContent" parameterType="VrContent">
        update vr_content
        <trim prefix="SET" suffixOverrides=",">
            <if test="contentName != null and contentName != ''">content_name = #{contentName},</if>
            <if test="category != null">category = #{category},</if>
            <if test="fileUrl != null and fileUrl != ''">file_url = #{fileUrl},</if>
            <if test="description != null">description = #{description},</if>
            <if test="carrierId != null">carrier_id = #{carrierId},</if>
            <if test="workId != null">work_id = #{workId},</if>
        </trim>
        where content_id = #{contentId}
    </update>

    <delete id="deleteVrContentByContentId" parameterType="Long">
        delete from vr_content where content_id = #{contentId}
    </delete>

    <delete id="deleteVrContentByContentIds" parameterType="String">
        delete from vr_content where content_id in 
        <foreach item="contentId" collection="array" open="(" separator="," close=")">
            #{contentId}
        </foreach>
    </delete>
</mapper>