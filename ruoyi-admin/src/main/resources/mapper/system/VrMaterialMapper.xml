<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.VrMaterialMapper">
    
    <resultMap type="VrMaterial" id="VrMaterialResult">
        <result property="materialId"    column="material_id"    />
        <result property="materialName"    column="material_name"    />
        <result property="category"    column="category"    />
        <result property="fileUrl"    column="file_url"    />
        <result property="description"    column="description"    />
        <result property="sceneId"    column="scene_id"    />
    </resultMap>

    <sql id="selectVrMaterialVo">
        select material_id, material_name, category, file_url, description, scene_id from vr_material
    </sql>

    <select id="selectVrMaterialList" parameterType="VrMaterial" resultMap="VrMaterialResult">
        <include refid="selectVrMaterialVo"/>
        <where>  
            <if test="materialName != null  and materialName != ''"> and material_name like concat('%', #{materialName}, '%')</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
            <if test="fileUrl != null  and fileUrl != ''"> and file_url = #{fileUrl}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="sceneId != null "> and scene_id = #{sceneId}</if>
        </where>
    </select>
    
    <select id="selectVrMaterialByMaterialId" parameterType="Long" resultMap="VrMaterialResult">
        <include refid="selectVrMaterialVo"/>
        where material_id = #{materialId}
    </select>

    <insert id="insertVrMaterial" parameterType="VrMaterial">
        insert into vr_material
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="materialId != null">material_id,</if>
            <if test="materialName != null and materialName != ''">material_name,</if>
            <if test="category != null">category,</if>
            <if test="fileUrl != null and fileUrl != ''">file_url,</if>
            <if test="description != null">description,</if>
            <if test="sceneId != null">scene_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="materialId != null">#{materialId},</if>
            <if test="materialName != null and materialName != ''">#{materialName},</if>
            <if test="category != null">#{category},</if>
            <if test="fileUrl != null and fileUrl != ''">#{fileUrl},</if>
            <if test="description != null">#{description},</if>
            <if test="sceneId != null">#{sceneId},</if>
         </trim>
    </insert>

    <update id="updateVrMaterial" parameterType="VrMaterial">
        update vr_material
        <trim prefix="SET" suffixOverrides=",">
            <if test="materialName != null and materialName != ''">material_name = #{materialName},</if>
            <if test="category != null">category = #{category},</if>
            <if test="fileUrl != null and fileUrl != ''">file_url = #{fileUrl},</if>
            <if test="description != null">description = #{description},</if>
            <if test="sceneId != null">scene_id = #{sceneId},</if>
        </trim>
        where material_id = #{materialId}
    </update>

    <delete id="deleteVrMaterialByMaterialId" parameterType="Long">
        delete from vr_material where material_id = #{materialId}
    </delete>

    <delete id="deleteVrMaterialByMaterialIds" parameterType="String">
        delete from vr_material where material_id in 
        <foreach item="materialId" collection="array" open="(" separator="," close=")">
            #{materialId}
        </foreach>
    </delete>
</mapper>